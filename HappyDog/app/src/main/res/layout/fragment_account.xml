<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".fragment.AccountFragment">


    <EditText
        android:id="@+id/profile_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="112dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="예상지출 금액"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="297dp"
        android:layout_height="274dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
    </com.github.mikephil.charting.charts.PieChart>

    <ImageView
        android:id="@+id/btn_fix"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="220dp"
        android:src="@drawable/bar_third"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piechart"
        app:layout_constraintVertical_bias="0.156"></ImageView>

    <TextView
        android:id="@+id/btn_fix_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="16dp"
        android:text="수정"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_fix"
        app:layout_constraintEnd_toEndOf="@+id/btn_fix" />

    <ImageView
        android:id="@+id/feed_recommend_button"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginBottom="148dp"
        android:src="@drawable/bar_third"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"></ImageView>

    <ImageView
        android:id="@+id/feed"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/feed"
        app:layout_constraintBottom_toBottomOf="@+id/feed_recommend_button"
        app:layout_constraintEnd_toEndOf="@+id/feed_recommend_button"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="@+id/feed_recommend_button"></ImageView>

    <TextView
        android:id="@+id/feed_text"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginBottom="5dp"
        android:text="사료 추천"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/feed_recommend_button"
        app:layout_constraintEnd_toEndOf="@+id/feed_recommend_button"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toEndOf="@+id/feed" />

    <ImageView
        android:id="@+id/snack_recommend_button"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:src="@drawable/bar_third"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feed_recommend_button"></ImageView>

    <ImageView
        android:id="@+id/snack"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/snack"
        app:layout_constraintBottom_toBottomOf="@+id/snack_recommend_button"
        app:layout_constraintEnd_toEndOf="@+id/snack_recommend_button"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="@+id/snack_recommend_button"
        app:layout_constraintTop_toBottomOf="@+id/feed"
        app:layout_constraintVertical_bias="0.153"></ImageView>

    <TextView
        android:id="@+id/snack_text"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginBottom="5dp"
        android:text="간식 추천"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/snack_recommend_button"
        app:layout_constraintEnd_toEndOf="@+id/snack_recommend_button"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/snack" />

    <ImageView
        android:id="@+id/insurance_recommend_button"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:src="@drawable/bar_third"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snack_recommend_button"></ImageView>

    <ImageView
        android:id="@+id/insurance"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/insurance"
        app:layout_constraintBottom_toBottomOf="@+id/insurance_recommend_button"
        app:layout_constraintEnd_toEndOf="@+id/insurance_recommend_button"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="@+id/insurance_recommend_button"
        app:layout_constraintTop_toBottomOf="@+id/snack_recommend_button"
        app:layout_constraintVertical_bias="0.0"></ImageView>

    <TextView
        android:id="@+id/insurance_text"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginBottom="5dp"
        android:text="보험 추천"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/insurance_recommend_button"
        app:layout_constraintEnd_toEndOf="@+id/insurance_recommend_button"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toEndOf="@+id/insurance" />

</androidx.constraintlayout.widget.ConstraintLayout>